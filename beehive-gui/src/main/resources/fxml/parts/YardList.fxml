<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="sk.badand.beehive.gui.controller.YardListController"
      BorderPane.alignment="CENTER"
      spacing="30">
    <children>
        <HBox>
            <VBox.margin>
                <Insets top="20.0" left="20.0" right ="20.0" />
            </VBox.margin>
            <children>
                <Button mnemonicParsing="false" text="%btn.add" />
                <Button mnemonicParsing="false" text="%btn.remove" />
            </children>
        </HBox>
        <TableView fx:id="yardsView" VBox.vgrow="ALWAYS" >
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right ="10.0" />
            </VBox.margin>
            <columns>
                <TableColumn fx:id="yardName" text="%yard.name" />
                <TableColumn fx:id="hivesCount" text="%hive.count" />
            </columns>
        </TableView>

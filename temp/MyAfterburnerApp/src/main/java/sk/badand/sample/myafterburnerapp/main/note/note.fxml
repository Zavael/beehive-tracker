<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" fx:controller="sk.badand.sample.myafterburnerapp.main.note.NotePresenter">
    <stylesheets>
        <URL value="@/styles/note.css"/>
    </stylesheets>
    <children>
        <HBox >
            <children>
                <Label fx:id="createdDate" alignment="CENTER_LEFT"  /> 
                <Label fx:id="title" alignment="CENTER_RIGHT" /> 
            </children>
        </HBox>
        <TextArea fx:id="content" VBox.vgrow="ALWAYS"  />
        <HBox alignment="CENTER">
            <children>
                <Button text="New" onAction="#newNote"  /> 
                <Button text="Save" onAction="#save" /> 
                <Button text="Delete" /> 
            </children>
        </HBox>
        
    </children>
</VBox>
